<?xml version="1.0" encoding="UTF-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">   
 
<!-- 主体背景颜色值 -->  

	<item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp"
	    android:state_pressed="true">   
	     <shape>   
	    <gradient android:startColor="#eb6b99" android:centerColor="#ef8099" 
	    android:endColor="#f49599" android:type="linear" android:angle="90"  
	    android:centerX="0.5" android:centerY="0.5" />  
	   
	    <padding android:left="2dp" android:top="2dp" android:right="2dp"  
	    android:bottom="2dp" />  
	   <!-- 应该是圆角 -->
	    <corners android:radius="6dp" />    
	     </shape>	 
	</item>   
	
	<item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp"
	    android:state_selected="true">"
	     <shape>   
	    <gradient android:startColor="#eb6b99" android:centerColor="#ef8099" 
	    android:endColor="#f49599" android:type="linear" android:angle="90"  
	    android:centerX="0.5" android:centerY="0.5" />  
	   
	    <padding android:left="2dp" android:top="2dp" android:right="2dp"  
	    android:bottom="2dp" />  
	   <!-- 应该是圆角 -->
	    <corners android:radius="6dp" />    
	     </shape>	 
	</item> 
	
	<item android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp"
	    >   
	     <shape>   
	    <gradient android:startColor="#eb6b00" android:centerColor="#ef8000" 
	    android:endColor="#f49500" android:type="linear" android:angle="90"  
	    android:centerX="0.5" android:centerY="0.5" />  
	   
	    <padding android:left="2dp" android:top="2dp" android:right="2dp"  
	    android:bottom="2dp" />  
	   <!-- 应该是圆角 -->
	    <corners android:radius="6dp" />    
	     </shape>	 
	</item>   
	
<!-- 连框颜色值 -->
	<item>   
	  <shape>   
	    <solid android:color="#151104" />   
	    <corners android:radius="6dp" />    
	  </shape>   
	</item>  
</selector>